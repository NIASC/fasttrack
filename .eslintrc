{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "indent": [ 2, 4 ],
        "react/jsx-indent-props": [2, 4],
        "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ],
        "quotes": [ 1, "double"],
        "no-unused-vars": 1,
        "no-shadow": 1,
        "no-param-reassign": 1,
        "new-cap": [1, { "capIsNewExceptions": ["ImmutableStore", "List", "Map"] }],
        "comma-dangle": 1,
        "no-unused-expressions": 1,
        "react/sort-comp": 1,
        "prefer-const": 1,
        "max-len": 1,
        "quote-props": 1,
    },
}
